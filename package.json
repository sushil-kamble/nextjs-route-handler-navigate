{
  "name": "nextjs-navigator",
  "displayName": "Next.js Navigator",
  "description": "Navigate through Next.js app directory routes and route handlers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:package.json",
    "workspaceContains:next.config.js",
    "workspaceContains:next.config.mjs"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nextjs-navigator.refreshRoutes",
        "title": "Refresh Next.js Routes",
        "icon": "$(refresh)"
      },
      {
        "command": "nextjs-navigator.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "nextjs-navigator.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "nextjs-navigator.addRoute",
        "title": "Add New Route",
        "icon": "$(add)"
      },
      {
        "command": "nextjs-navigator.addChildRoute",
        "title": "Add Child Route",
        "icon": "$(add)"
      },
      {
        "command": "nextjs-navigator.copyRoute",
        "title": "Copy Route Path",
        "icon": "$(copy)"
      },
      {
        "command": "nextjs-navigator.copyFilePath",
        "title": "Copy File Path",
        "icon": "$(file-symlink-file)"
      },
      {
        "command": "nextjs-navigator.deleteRoute",
        "title": "Delete Route",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nextjs-navigator",
          "title": "Next.js Navigator",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "nextjs-navigator": [
        {
          "id": "nextjsRoutes",
          "name": "Routes"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "nextjs-navigator.refreshRoutes",
          "when": "view == nextjsRoutes",
          "group": "navigation"
        },
        {
          "command": "nextjs-navigator.expandAll",
          "when": "view == nextjsRoutes",
          "group": "navigation"
        },
        {
          "command": "nextjs-navigator.collapseAll",
          "when": "view == nextjsRoutes",
          "group": "navigation"
        },
        {
          "command": "nextjs-navigator.addRoute",
          "when": "view == nextjsRoutes",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nextjs-navigator.addChildRoute",
          "when": "view == nextjsRoutes && viewItem == route",
          "group": "1_modification"
        },
        {
          "command": "nextjs-navigator.copyRoute",
          "when": "view == nextjsRoutes && viewItem == route",
          "group": "2_copy"
        },
        {
          "command": "nextjs-navigator.copyFilePath",
          "when": "view == nextjsRoutes && viewItem == route",
          "group": "2_copy"
        },
        {
          "command": "nextjs-navigator.deleteRoute",
          "when": "view == nextjsRoutes && viewItem == route",
          "group": "3_deletion"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
